# .editorconfig

# This is the root of the project
root = true

# Apply these rules to all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C++ specific settings
[*.{cpp,h,hpp,c,hh}]

# --- BRACE STYLE ---
# This is the KEY FIX for putting the opening brace on the SAME line.
# We are explicitly setting this to 'false' instead of 'ignore'.
cpp_new_line_before_open_brace_namespace = false
cpp_new_line_before_open_brace_type = false
cpp_new_line_before_open_brace_function = false
cpp_new_line_before_open_brace_block = false
cpp_new_line_before_open_brace_lambda = false
cpp_indent_braces = false

# --- BLOCK COLLAPSING ---
# This is the KEY FIX to STOP your vector from collapsing.
# We are removing the problematic 'cpp_wrap_preserve_blocks' rule entirely.

# --- General Spacing and Newline Rules (Kept from your original file) ---
cpp_new_line_before_catch = true
cpp_new_line_before_else = true
cpp_space_after_keywords_in_control_flow_statements = true
cpp_space_before_block_open_brace = true
cpp_space_within_initializer_list_braces = true
cpp_space_after_comma = true
cpp_space_around_binary_operator = insert
cpp_space_around_assignment_operator = insert
cpp_space_after_semicolon=true